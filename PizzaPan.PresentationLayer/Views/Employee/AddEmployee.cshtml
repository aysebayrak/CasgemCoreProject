
@model Employee

@{
    ViewData["Title"] = "AddEmployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Personel Ekleme Sayfası</h1>


<form method="post">

    <label>Personel Adı</label>
    <input asp-for="EmployeeName" class="form-control" style="background-color:#b1b3b1"/>
    <br />


     <label>Personel Soyadı</label>
    <input asp-for="EmployeeSurname" class="form-control" style="background-color:#b1b3b1"/>
    <br />

     <label>Personel Maaş</label>
    <input asp-for="EmployeeSalary" class="form-control" style="background-color:#b1b3b1"/>
    <br />


     <label>Medeni Durumu (1 bekar , 2 evli)</label>
    <input asp-for="Maritalstatus" class="form-control" style="background-color:#b1b3b1"/>
    <br />


     <label>Personel Yaşı</label>
    <input asp-for="EmployeeAge" class="form-control" style="background-color:#b1b3b1"/>
    <br />
    <button  class="btn btn-info">Kaydet</button>
</form>

