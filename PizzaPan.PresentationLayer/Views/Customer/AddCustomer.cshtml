
@model Customer

@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Müşteri Ekleme Sayfası</h1>


<form method="post">

    <label>Müşteri Adı</label>
    <input asp-for="CustomerName" class="form-control" style="background-color:#b1b3b1"/>
    <br />

    <label>Müşteri Soyadı</label>
    <input asp-for="CustomerSurname" class="form-control" style="background-color:#b1b3b1"/>
    <br />
    <button  class="btn btn-info">Kaydet</button>
</form>



