@model Customer

@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Müşteri Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="CustomerID"/>
    
      <label>Müşteri Adı</label>
    <input type="text" class="form-control" asp-for="CustomerName" style="background-color:darkgray" />
    <br />

      <label>Müşteri Soyadı</label>
    <input type="text" class="form-control" asp-for="CustomerSurname" style="background-color:darkgray" />
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>

