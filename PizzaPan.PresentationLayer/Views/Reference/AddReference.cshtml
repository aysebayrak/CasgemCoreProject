@model Reference

@{
    ViewData["Title"] = "AddReference";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Referans Eklem</h1>

<form method="post">

    <label>Referans Adı</label>
    <input asp-for="ReferenceName" class="form-control" style="background-color:#b1b3b1" />
    <br />
    <label>Firma Adı</label>
    <input asp-for="CompanyName" class="form-control" style="background-color:#b1b3b1" />
    <br />
    <label>Referans Numarası</label>
    <input asp-for="ReferenceNumber" class="form-control" style="background-color:#b1b3b1" />
    <br />
  
    
    <button class="btn btn-info">Kaydet</button>
</form>