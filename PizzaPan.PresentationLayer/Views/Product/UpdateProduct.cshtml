@model PizzaPan.EntityLayer.Concrate.Product

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Urün  Güncelleme</h1>


<form method="post">
    <input type="hidden" asp-for="ProductID" />
    <label>Ürün Adı</label>
    <input asp-for="ProductName" class="form-control" style="background-color:#b1b3b1" />
    <br />
    <label>Ürün Fiyatı</label>
    <input asp-for="Price" class="form-control" style="background-color:#b1b3b1" />
    <br />
    <label>Ürün Kategori</label>
    <input asp-for="CategoryID" class="form-control" style="background-color:#b1b3b1" />
    <br />
    <label>Ürün Görsel</label>
    <input asp-for="ImageURL" class="form-control" style="background-color:#b1b3b1" />
    <br />
    <label>Ürün Açıklaması</label>
    <input asp-for="ProductDescription" class="form-control" style="background-color:#b1b3b1" />
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>










