
@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count =0;
}

<h1>Mesajlar</h1>

<table class="table table-bordered">
<tr>
        <th>#</th>
        <th>Gönderen</th>
        <th>Konu</th>
        <th>Tarih</th>
        <th>Mesajı Sil</th>
        <th>Mesajı Gör</th>

</tr>
    @foreach(var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.ContactName</td>
            <td>@item.Subject</td>
            <td>@((DateTime)item.SendDateMessage)</td>
            <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger" >Sil</a></td>

            <td><a href="/Contact/MessageDetailContact/@item.ContactID" class="btn btn-outline-danger">Mesajı Gör</a></td>
        </tr>

   

    }
</table>

