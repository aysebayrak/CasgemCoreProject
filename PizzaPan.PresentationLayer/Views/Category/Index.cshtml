
@model List<PizzaPan.EntityLayer.Concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>

<table class="table table-border=">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Kategori Ürünleri</th>
        <th>Sitede Gör</th>
        <th>Sil</th>
        <th>Güncelle  </th>

    </tr>

    @foreach (var item in Model)
   {
       <tr>
           <td>@item.CategoryID</td>
           <td>@item.CategoryName</td>
           <td><a href="#" class="btn btn-outline-danger">Kategori Ürünleri</a></td>
           <td><a href="#" class="btn btn-outline-warning">Sitede Gör</a></td>
           <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-info">Sil</a></td>
           <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
       </tr>
       
   }
</table>

<a href="#" class="btn btn-outline-danger">Yeni Kategori Girişi</a>
